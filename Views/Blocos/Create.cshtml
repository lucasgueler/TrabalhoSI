@model SistemaMarmoreGranito.Models.Bloco

@{
    ViewData["Title"] = "Novo Bloco";
}

<h1>Novo Bloco</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PedreiraOrigem" class="control-label"></label>
                <input asp-for="PedreiraOrigem" class="form-control" />
                <span asp-validation-for="PedreiraOrigem" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MetragemM3" class="control-label"></label>
                <input asp-for="MetragemM3" class="form-control" />
                <span asp-validation-for="MetragemM3" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TipoMaterial" class="control-label"></label>
                <input asp-for="TipoMaterial" class="form-control" />
                <span asp-validation-for="TipoMaterial" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ValorCompra" class="control-label"></label>
                <input asp-for="ValorCompra" class="form-control" />
                <span asp-validation-for="ValorCompra" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NumeroNotaFiscal" class="control-label"></label>
                <input asp-for="NumeroNotaFiscal" class="form-control" />
                <span asp-validation-for="NumeroNotaFiscal" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 