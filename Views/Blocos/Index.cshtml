@model IEnumerable<SistemaMarmoreGranito.Models.Bloco>

@{
    ViewData["Title"] = "Blocos";
}

<h1>Blocos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Bloco</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.PedreiraOrigem)</th>
            <th>@Html.DisplayNameFor(model => model.MetragemM3)</th>
            <th>@Html.DisplayNameFor(model => model.TipoMaterial)</th>
            <th>@Html.DisplayNameFor(model => model.ValorCompra)</th>
            <th>@Html.DisplayNameFor(model => model.NumeroNotaFiscal)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.PedreiraOrigem)</td>
                <td>@Html.DisplayFor(modelItem => item.MetragemM3)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoMaterial)</td>
                <td>@Html.DisplayFor(modelItem => item.ValorCompra)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroNotaFiscal)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table> 